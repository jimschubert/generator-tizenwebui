<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:tizen="http://tizen.org/ns/widgets" id="http://yourdomain/<%= _.slugify(projectName) %>" version="1.0.0" viewmodes="maximized">
    <tizen:application id="<%= projectId %>.<%= _.camelize(projectName).toLowerCase() %>" package="<%= projectId %>" required_version="2.2"/>
    <author href="<%= authorUrl %>" email="<%= authorEmail %>"><%= authorName %></author>
    <content src="index.html"/>
    <feature name="http://tizen.org/feature/screen.size.all"/>
    <icon src="icon.png"/>
    <name><%= projectName %></name>
    <tizen:privilege name="http://tizen.org/privilege/unlimitedstorage"/>
</widget>
